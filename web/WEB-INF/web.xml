<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>com.library.controllers.LoginPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TemplateServlet</servlet-name>
        <servlet-class>com.library.controllers.TemplateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateClerk</servlet-name>
        <servlet-class>com.library.controllers.CreateClerk</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentEntry</servlet-name>
        <servlet-class>com.library.controllers.StudentEntry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffEntry</servlet-name>
        <servlet-class>com.library.controllers.StaffEntry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookEntry</servlet-name>
        <servlet-class>com.library.controllers.BookEntry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Issues</servlet-name>
        <servlet-class>com.library.controllers.Issues</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Returns</servlet-name>
        <servlet-class>com.library.controllers.Returns</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllReports</servlet-name>
        <servlet-class>com.library.controllers.AllReports</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.library.controllers.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/LoginPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TemplateServlet</servlet-name>
        <url-pattern>/TemplateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateClerk</servlet-name>
        <url-pattern>/CreateClerk</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentEntry</servlet-name>
        <url-pattern>/StudentEntry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffEntry</servlet-name>
        <url-pattern>/StaffEntry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookEntry</servlet-name>
        <url-pattern>/BookEntry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Issues</servlet-name>
        <url-pattern>/Issues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Returns</servlet-name>
        <url-pattern>/Returns</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllReports</servlet-name>
        <url-pattern>/AllReports</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoginPage</welcome-file>
    </welcome-file-list>
</web-app>
